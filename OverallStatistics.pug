doctype html

html(lang="en")
head
	title Overall Statistics of All Articles

link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
link(rel='stylesheet' href='/css/indexstyle.css' type='text/css' media='screen')
script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js', type='text/javascript')
script(src='https://cdn.bootcss.com/bootstrap-3-typeahead/4.0.2/bootstrap3-typeahead.min.js', type='text/javascript')
script(src='http://code.highcharts.com/highcharts.js' type='text/javascript')
script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')

body
h1(class="text-success") Overall Statistics
h4(class="text-warning") Overall Revision: #{revision[0].numOfEdits}

span(class="glyphicon glyphicon-tag") The article with the most number of revisions: #{revision[1]._id}
br
span(class="glyphicon glyphicon-tag") The article with the least number of revisions: #{revision[2]._id}
br
span(class="glyphicon glyphicon-tag") The article edited by largest group of registered users:
br
span(class="glyphicon glyphicon-tag") The article edited by smallest group of registered users:
br
span(class="glyphicon glyphicon-tag") The article with the longest history: #{revision[3].title}
br
span(class="glyphicon glyphicon-tag") The article with the shortest history:

h4
	form(action='/getDetails' method='GET')
			label(class="text-info") Search for an article:
			input(id="ti" type="text" name="title" placeholder="please input a title" autofocus)
			|
			input(type="submit" value = "Search" class="btn btn-success btn-sm")
			|  
			input(type="reset" value = "Clear" class="btn btn-danger btn-sm" title="Delete the input")
script(src='/titleList.js', type='text/javascript')
input(type="button" id="eve" value="Click Here to Inspect the Piechart of Overall Statistics" class="btn btn-default btn-lg btn-block") 
h3#ba(class="text-warning") The Barchart of Overall Statistics:
div#bar
script(src='/highcharts/barchartAll.js', type='text/javascript')
h3#pi(class="text-warning") The Piechart of Overall Statistics:
div#pie
script(src='/highcharts/piechartAll.js', type='text/javascript')
script(src='/chartSwift.js', type='text/javascript')